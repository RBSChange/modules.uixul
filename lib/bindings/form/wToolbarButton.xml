	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<!--
################################################################################
## wToolbarButton                                                             ##
################################################################################
-->

	<binding id="wToolbarButton" extends="form.wButtonBase#wButtonBase">
		<xbl:content
			xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
			xmlns:xbl="http://www.mozilla.org/xbl">
			<toolbarbutton xbl:inherits="accesskey,autoCheck,checkState,checked,command,crop,dir,disabled,dlgType,group,icon,image,label,open,orient,tabindex,type,oncommand,label=value">
				<xbl:children includes="observes|template|menupopup|tooltip" />
			</toolbarbutton>
		</xbl:content>

	</binding>

</bindings>