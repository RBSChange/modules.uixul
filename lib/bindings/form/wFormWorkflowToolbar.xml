<?xml version="1.0"?>
<bindings
	xmlns="http://www.mozilla.org/xbl"
	xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

<!--
################################################################################
## wFormWorkflowToolbar                                                       ##
################################################################################
-->

	<binding id="wFormWorkflowToolbar" extends="form.wFormToolbar#wFormToolbar">


		<xbl:content
			xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
			xmlns:xbl="http://www.mozilla.org/xbl">

			<toolbox flex="1" class="change-toolbox">
				<toolbar flex="1" class="change-toolbar">
					<wtoolbarsubmitbutton anonid="submitButton" label="&amp;modules.uixul.bo.general.buttons.Save;" image="{IconsBase}/small/shadow/disk_blue.png" />
					<wtoolbarresetbutton anonid="resetButton" label="&amp;modules.uixul.bo.general.buttons.Reset;" image="{IconsBase}/small/shadow/selection.png" />
					<wtoolbarcreatenewbutton anonid="createButton" label="&amp;modules.uixul.bo.general.buttons.Createnew;" image="{IconsBase}/small/shadow/add.png" />
					<toolbarseparator />
					<wtoolbarbutton anonid="approveButton" label="Approve" />
					<wtoolbarbutton anonid="draftButton" label="Set as draft" />
					<toolbarseparator />
					<xbl:children includes="toolbarbutton" />
					<spacer flex="1" />
					<!--
					intbonjf 2007-03-07:
					Do not use a toolbarbutton here... Why? I don't know... Feel free to try it
					and find what's wrong... I gave up!
					-->
					<wbutton anonid="closeButton" label=" &amp;modules.uixul.bo.general.buttons.Close;" image="{IconsBase}/small/shadow/error.png">
						<observes element="wcontroller" attribute="disabled" />
					</wbutton>
				</toolbar>
			</toolbox>

		</xbl:content>

	</binding>

</bindings>