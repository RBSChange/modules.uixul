<?xml version="1.0" encoding="utf-8"?>
<bindings xmlns="http://www.mozilla.org/xbl" xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:xbl="http://www.mozilla.org/xbl">
<!--
wTree
	@author INTcourS

	Specific hierarchical tree view for LOCALES.
-->
	<binding id="wLocaleTree" inheritstyle="true" extends="widgets.wLocaleList#wLocaleList">


		<implementation>

		    <constructor><![CDATA[
                this.getElementById("filtertb").style.paddingTop = "2px";
                this.setWorkingLanguage(this.getModule().i18n_defaultLang);
			]]></constructor>

		    <method name="isList">
				<body>
					return false;
				</body>
			</method>

            <method name="__setupActions">
                <body><![CDATA[
                this._availableActions["editlocale_folder"] = {
                    select : [ "createEntity", "export", "exportuseredited" ],
                    contextmenu : [ "createEntity", "export", "exportuseredited" ],
                };
                this.setWorkingLanguage(this.getModule().i18n_defaultLang);
                ]]></body>
            </method>

            <method name="__setupColumns">
                <body><![CDATA[
                this._availableColumns['default'] = [ {ref: "label", flex: "5", primary: "true", properties: "type overridden useredited", label: "label"} ];
                this.setWorkingLanguage(this.getModule().i18n_defaultLang);
                ]]></body>
            </method>

            <method name="__setupDatasource">
                <body><![CDATA[
                this._dataSource = { parser: "localepackage", source: moduleName };
                this.setWorkingLanguage(this.getModule().i18n_defaultLang);
                ]]></body>
            </method>

        </implementation>

	</binding>


</bindings>
